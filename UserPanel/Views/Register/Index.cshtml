@model RegisterModel
@{
    Layout = "_Layout";
    var ModelState = ViewData.ModelState;
}
<section class="bg-gray-200 w-100">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        @if (ModelState.ContainsKey("RegisterError"))
        {
            <div class="w-full border sm:max-w-md bg-white rounded-lg px-2 py-2 mb-4 text-lg font-semibold">
                @foreach (var error in ModelState["RegisterError"].Errors)
                {
                    <div class="text-danger">
                        @error.ErrorMessage
                    </div>
                }
            </div>
        }
        <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
            <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
            UserPanel
        </a>
        <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                    Register Account
                </h1>
                <form class="space-y-4 md:space-y-6" method="post" asp-action="index" , asp-controller="Register">
                    <div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <label asp-for="Name" for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your Name</label>
                        <input asp-for="Name" type="text" name="name" id="name" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.Name) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Name">
                    </div>
                    <div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label asp-for="Email" for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your email</label>
                        <input asp-for="Email" type="name" name="email" id="email" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.Email) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="name@company.com">
                    </div>
                    <div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label asp-for="Password" for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                        <input asp-for="Password" type="password" name="password" id="password" placeholder="••••••••" class="bg-gray-5 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.Password) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    </div>
                    <div>
                        <span asp-validation-for="CPassword" class="text-danger"></span>
                        <label asp-for="CPassword" for="CPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Confirm Password</label>
                        <input asp-for="CPassword" type="password" name="cpassword" id="cpassword" placeholder="••••••••" class="bg-gray-5 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.CPassword) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    </div>
                    <div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <label asp-for="PhoneNumber" for="CPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Phone</label>
                        <input asp-for="PhoneNumber" type="tel" name="PhoneNumber" id="PhoneNumber" placeholder="••••••••" class="bg-gray-5 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.PhoneNumber) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    </div>
                    <button type="submit" class="w-full text-white rounded-lg bg-blue-600 py-2 mb-6">Sign in</button
                     <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                         Log in <a href="/login" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Log in</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>
