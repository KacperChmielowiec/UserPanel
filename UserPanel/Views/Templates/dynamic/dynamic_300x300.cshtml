@model RenderModel
@{
}

@if(Model.Products.Count > 0)
{
    <div class="ad-wrapper">
        <div class="image-wrapper">
            <img src="@Model.Products[0].ImageUrl"/>
        </div>
        <div class="content-wrapper mx-2 flex justify-center">
            <div class="name-wrapper"> <span class="name">@Model.Products[0].Name</span> </div>
            <div class="price-wrapper">
                <span class="cta">Zakup</span>
                <div class="price">
                    <span>Cena:</span>
                    <span>@Model.Products[0].Price PLN</span>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <span>Brak produktów dla tej reklamy</span>   
}
<style>
    
    body{
        font-family: Arial, Helvetica, sans-serif;
        box-sizing: border-box;
        margin: 0;
        width: 100%;
        padding:0;
    }
    .ad-wrapper{
        width: 300px;
        height: 300px;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #d0e6ff;
    }
    .image-wrapper{
        width: 285px;
        height: 200px;
        margin-top: 10px;
        border-radius: 10px;
    }
    .image-wrapper img{
        object-fit: cover;
        object-position: center;
        width: 100%;
        height: 100%;
        border-radius: 10px;
    }
    .content-wrapper{
        padding: 10px 0;
    }
    .price-wrapper{
        display: flex;
        padding: 10px 0;
        margin-top: 10px;
        justify-content: space-between;
    }
    .cta{
        padding: 7px 13px;
        border-radius: 5px;
        background-color: #D22B2B;
        font-weight: 700;
        color: #ffffff;
        font-size: 14px;
    }
    .price{
        font-size: 14px;
        background-color: #D22B2B;
        font-weight: 700;
        color: #ffffff;
        border-radius: 5px;
        padding: 7px 13px;
    }
</style>