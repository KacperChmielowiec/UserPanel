@model RenderModel
@{
}

@if (Model.Products.Count > 1)
{
    <div class="ad-wrapper">
        <div class="product">
            <div class="image-wrapper">
                <img src="@Model.Products[0].ImageUrl" />
            </div>
            <div class="content-wrapper flex justify-center">
                <div class="name-wrapper"> <span class="name">@Model.Products[0].Name</span> </div>
                <div class="price-wrapper">
                    <div class="price">
                        <span>Cena:</span>
                        <span>@Model.Products[0].Price PLN</span>
                    </div>
                    <span class="cta">Zakup</span>
                </div>
            </div>
        </div>
        <div class="product">
            <div class="image-wrapper">
                <img src="@Model.Products[1].ImageUrl" />
            </div>
            <div class="content-wrapper flex justify-center">
                <div class="name-wrapper"> <span class="name">@Model.Products[1].Name</span> </div>
                <div class="price-wrapper">
                    <div class="price">
                        <span>Cena:</span>
                        <span>@Model.Products[1].Price PLN</span>
                    </div>
                    <span class="cta">Zakup</span>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <span>Brak produktów dla tej reklamy</span>
}
<style>

    body {
        font-family: Arial, Helvetica, sans-serif;
        box-sizing: border-box;
        margin: 0;
        width: 100%;
        padding: 0;
    }

    .ad-wrapper {
        width: 300px;
        height: 600px;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #d0e6ff;
    }
   

    .image-wrapper {
        width: 285px;
        height: 200px;
        margin-top: 15px;
        border-radius: 10px;
        margin-left: auto;
        margin-right: auto;
    }

    .image-wrapper img {
        object-fit: cover;
        object-position: center;
        width: 100%;
        height: 100%;
        border-radius: 10px;
    }

    .content-wrapper {
        margin: 0 10px;
    }

    .price-wrapper {
        display: flex;
        margin-top: 10px;
        margin-left: 15px;
        margin-right: 15px;
        justify-content: space-between;
    }

    .cta {
        padding: 7px 13px;
        border-radius: 5px;
        background-color: #D22B2B;
        font-weight: 700;
        color: #ffffff;
        font-size: 14px;
    }

    .price {
        font-size: 14px;
        background-color: #D22B2B;
        font-weight: 700;
        color: #ffffff;
        border-radius: 5px;
        padding: 7px 13px;
    }

    .name-wrapper{
        overflow: hidden;
        white-space: nowrap;
        width: 280px !important;
        text-align: center;
        padding: 10px 0;
    }
    .name{
        width: 90%;
        text-align: center;
        display:inline-block;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden; /* Dodaj ten styl */
    }
</style>