@model ResetUserPassword
@{
    Layout = "_DLayout";
}

<section class="py-1 bg-blueGray-50 table-campaning ">
    <div class="w-full  mb-12 xl:mb-0 px-4 mx-auto mt-8">
        @if (ViewData.ModelState.TryGetValue("Error", out var errorState) && errorState.Errors.Any())
        {
            foreach (var error in errorState.Errors)
            {
                <div class="alert warning mb-6 mt-10">
                    @error.ErrorMessage
                </div>
            }
        }
        @if (TempData.ContainsKey("success"))
        {
            <div class="alert success mb-6 mt-10">
                @TempData["success"];
            </div>
        }
        <section class="relative flex flex-col min-w-0  break-words w-full mb-6 bg-zinc-100 pt-8 pb-4 shadow-lg rounded ">
            <div class="rounded-t mb-0 px-4 py-3 border-b-1">
                <div class="flex flex-wrap items-center">
                    <div class="relative w-full px-4 py-4 max-w-full flex-grow flex-1">
                        <h1 class="font-semibold text-xl text-blueGray-700">Change Password User</h1>
                    </div>
                </div>
            </div>

            <div class="body mx-40">
                <form class="ml-[50px] pb-10" asp-action="SettingsUserPost" asp-controller="Home">
                    <div class="py-6">
                        <header class="text-xl">Form: </header>
                    </div>
                    <input hidden asp-for="@Model.Id" value="@Model.Id" />
                    <div class="form-group pb-4 d-flex flex-col gap-y-1">
                        <div>
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                            <label asp-for="OldPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Old Password</label>
                            <input asp-for="OldPassword" type="password" name="OldPassword" id="email" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.OldPassword) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Old Password">
                        </div>
                    </div>
                    <div class="form-group pb-4 d-flex flex-col gap-y-1">
                        <div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <label asp-for="NewPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">New Password</label>
                            <input asp-for="NewPassword" type="password" name="NewPassword" id="email" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.NewPassword) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="New Password">
                        </div>
                    </div>
                    <div class="form-group pb-4 d-flex flex-col gap-y-1">
                        <div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <label asp-for="ConfirmPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Cofnirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" id="email" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.ConfirmPassword) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Confirm password">
                        </div>
                    </div>
                    <div class="rounded-t mb-0 py-6 border-b-1">
                        <div class="pull-right">
                            <a href="/admin/dashboard" class="btn btn-flat white"><i class="icon-reply"></i> Wróć</a>
                            <button type="submit" class="btn btn-flat success"><i class="icon-plus"></i> Resetuj</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>


    </div>
</section>