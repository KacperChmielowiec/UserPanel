@model PasswordProtectionForm

<section class="py-1 bg-blueGray-50 table-campaning ">
    <div class="w-full  mb-12 xl:mb-0 px-4 mx-auto mt-8">
        @if (ViewData.ModelState.TryGetValue("Error", out var errorState) && errorState.Errors.Any())
        {
            foreach (var error in errorState.Errors)
            {
                <div class="alert warning mb-6 mt-10">
                    @error.ErrorMessage
                </div>
            }
        }
        <section class="relative flex flex-col min-w-0  break-words w-full mb-6 bg-zinc-100 pt-8 pb-4 shadow-lg rounded ">
            <div class="rounded-t mb-0 px-4 py-3 border-b-1">
                <div class="flex flex-wrap items-center">
                    <div class="relative w-full px-4 py-4 max-w-full flex-grow flex-1">
                        <h1 class="font-semibold text-xl text-blueGray-700">Change Password Admin</h1>
                    </div>
                </div>
            </div>

            <div class="body mx-40">
                <form class="ml-[50px] pb-10" asp-action="ProtectionPost" asp-controller="Home">
                    <div class="form-group d-flex pb-4 flex-col gap-y-1">
                        <span asp-validation-for="IsDigit" class="text-danger"></span>
                        <input type="checkbox" data-caption="Must have digit" data-role="checkbox" checked="@Model.IsDigit" name="IsDigit" asp-for="IsDigit">
                    </div>
                    <div class="form-group d-flex pb-4 flex-col gap-y-1">
                        <span asp-validation-for="IsSpecialChar" class="text-danger"></span>
                        <input type="checkbox" data-caption="Must have special char." data-role="checkbox" checked="@Model.IsSpecialChar" name="IsSpecialChar" asp-for="IsSpecialChar" data-style="2">
                    </div>
                    <div class="form-group d-flex pb-4 flex-col gap-y-1">
                        <span asp-validation-for="IsNoRepeat" class="text-danger"></span>
                        <input type="checkbox" data-caption="Must not repeat:" data-role="checkbox" checked="@Model.IsNoRepeat" name="IsNoRepeat" asp-for="IsNoRepeat" data-style="2">
                    </div>
                    <div class="form-group d-flex pb-4 flex-col gap-y-1">
                        <span asp-validation-for="IsUpperCase" class="text-danger"></span>
                        <input type="checkbox" data-caption="Must Upper Case:" data-role="checkbox" checked="@Model.IsUpperCase" name="IsUpperCase" asp-for="IsUpperCase" data-style="2">
                    </div>
                    <div class="form-group d-flex pb-4 flex-col gap-y-1">
                        <div>
                            <p>Password Range Constraint</p>
                        </div>
                        <div>
                            <input type="checkbox" data-caption="Enable rule:" checked="@Model.IsLenRange" data-role="checkbox" name="IsLenRange" asp-for="IsLenRange" data-style="2">
                        </div>
                        <div class="flex gap-x-4">
                            <div>
                                <label asp-for="MinValueLen" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Min.</label>
                                <input asp-for="MinValueLen" value="@Model.MinValueLen" type="text" name="MinValueLen" id="pass" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.MaxValueLen) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                            </div>
                            <div>
                                <label asp-for="MaxValueLen" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Max.</label>
                                <input asp-for="MaxValueLen" value="@Model.MaxValueLen" type="text" name="MaxValueLen" id="pass" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.MinValueLen) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                            </div>
                        </div>

                    </div>
                    <div class="form-group d-flex pb-4 flex-col gap-y-1">
                        <div>
                            <p>Password Time expiry</p>
                        </div>
                        <div>
                            <input type="checkbox" data-caption="Enable rule:" checked="@Model.IsPassTime" data-role="checkbox" name="IsPassTime" asp-for="IsPassTime" data-style="2">
                        </div>
                        <div class="flex">
                            <div>
                                <label asp-for="PassTimeValue" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Min.</label>
                                <input asp-for="PassTimeValue" value="@Model.PassTimeValue" type="text" name="PassTimeValue" id="pass" class="bg-gray-50 @Html.AddClassIfPropertyInError("error-form","border-field",(x) => x.PassTimeValue) text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                            </div>
                        </div>

                    </div>
                    <div class="rounded-t mb-0 py-6 border-b-1">
                        <div class="pull-right">
                            <a href="/admin/dashboard" class="btn btn-flat white"><i class="icon-reply"></i> back</a>
                            <button type="submit" class="btn btn-flat success"><i class="icon-plus"></i> Cofnirm</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</section>